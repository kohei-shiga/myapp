<div class="row">
  <div class="col-md-5">
    <div class="card py-3">
      <div class="card-body">
        <div class="text-center">
          <%= image_tag @user.display_image, class: 'rounded rounded-circle img-fluid border border-dark' if @user.image.attached? %>
        </div>
        <h4 class="card-title text-center"><%= @user.name %></h4>
        <div class="flex">
          <p><a href="<%= user_path(@user) %>">投稿</a></p>
          <p><a href="<%= followings_user_path(@user) %>"><span class="badge badge-secondary"><%= @count_followings %></span>フォロー</a></p>
          <p><a href="<%= followers_user_path(@user) %>"><span class="badge badge-secondary"><%= @count_followers %></span>フォロワー</a></p>
        </div>
        <div class="text-center">
          <%= link_to 'プロフィールを編集する', edit_user_path(@user) %>
        </div>
      </div>
    </div>
    <div class="mt-3 text-center">
      <%= render 'users/follow_form', user: @user %>
    </div>
  </div>
  <div class="col-md-7">
    <div class="title mb-2">
      <div class="box"></div>
      <div class="ml-4">フォロー</div>
    </div>
    <div>
      <%= render 'users', users: @followers %>
    </div>
  </div>
  
  
  
  
  